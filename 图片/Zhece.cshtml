@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/Models/Login.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录界面</title>
</head>
<body>
    <div>
        <form method="post">
          <table id="Login">
              <tr>
                  <th>用户名：</th>
              <td>  
                  <input type="text" name="username" value="" placeholder="请输入用户名"/>
              </td>
              </tr>
              <tr class="password">
                  <th>密码：</th>
              <td>   
                  <input type="password" name="userPwd" value="" placeholder="请输入密码" />
              </td>
              </tr>
              <tr class="code">
                   <th>验证码：</th>
              <td>  
                  <input type="text" name="vCode" value="" placeholder="请输入验证码" />
                  <img id="vcodeimg" src="/Login/ValidateCode" width="100" height="40" style="vertical-align: middle; cursor:pointer" onclick="changeCode()" />
              </td>
              </tr>
              <tr>
                  <td class="button">
                      <input type="submit" class="Login" name="submit" value=""  />
                      <input type="reset" class="reset" name="reset" value="重置" />
                      <input type="button" class="quxiao" name="quxiao" value="取消" />
                  </td>
                  
              </tr>
          </table>  
        </form>
    </div>
</body>
</html>
